# Server Configuration
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sikhiya_offline
DB_USER=postgres
DB_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@localhost:5432/sikhiya_offline

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp,mp4,mov,avi,mp3,wav,m4a,pdf

# Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_TIMEOUT=30000
MAX_SYNC_RETRIES=3

# Media Processing
FFMPEG_PATH=/usr/bin/ffmpeg
VIDEO_COMPRESSION_QUALITY=720
IMAGE_COMPRESSION_QUALITY=85

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

